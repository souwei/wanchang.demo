<!DOCTYPE html>
<html>
  <head>
    <title>PatientApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar sticky-top navbar-light bg-light justify-content-between">
      <a class="navbar-brand col-md-3" href="#">Wan Chang Chinese Herbalist</a>
      <div class="col-md-7">

        <%= form_tag(patients_path, method: 'get') do %>
          <div class="input-group">
          <%= text_field_tag 'search', params[:search] , class: 'form-control', placeholder: 'Search'%>
          <span class="input-group-append">
            <button type="submit" class="bg-transparent input-group-text btn btn-default">
                      <i class="fa fa-search"></i>
            </button>
          </span>
            </div>
        <% end %>

      </div>
      <%= link_to patients_path, class: "btn btn-outline-warning" do %>
        <i class="fas fa-home fa-fw"></i> Home
      <% end %>

    </nav>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
