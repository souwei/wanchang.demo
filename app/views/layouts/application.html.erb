<!DOCTYPE html>
<html>
  <head>
    <title>PatientApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar sticky-top navbar-light bg-light justify-content-between">
      <a class="navbar-brand col-md-3" href="#">Wan Chang Chinese Herbalist</a>
      <div class="input-group col-md-7">
        <input class="form-control" name="name" type="text" placeholder="Search for Patient name.." />
        <span class="input-group-append">
          <div class="input-group-text bg-transparent"><i class="fa fa-search"></i></div>
        </span>
      </div>
      <%= link_to patients_path, class: "btn btn-outline-warning" do %>
        <i class="fas fa-home fa-fw"></i> Home
      <% end %>

    </nav>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
